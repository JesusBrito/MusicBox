<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jesus.animales.Domesticos"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@drawable/casa">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:fontFamily="casual"
            android:text="Haustiere"
            android:textSize="35dp" />
    </LinearLayout>
    <!--PRIMER BLOQUE-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ImbPez"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fisch"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ImbGato"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gato"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </LinearLayout>
    <!--SEGUNDO BLOQUE-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/ImbPerro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/perro"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/ImbTortuga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tortuga"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
