<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.jesus.animales.Granja"
android:orientation="vertical"
android:gravity="bottom"
    android:background="@drawable/granja">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bauerntiere"
            android:fontFamily="casual"
            android:textSize="35dp"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>
    <!--PRIMER BLOQUE-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ImbGallo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gallo"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ImbCaballo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/caballo"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>/>
        </LinearLayout>
    </LinearLayout>
    <!--SEGUNDO BLOQUE-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ImbVaca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/vaca"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ImbCerdito"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cerdito"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
